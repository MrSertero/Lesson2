@model Lesson2.Models.Product.ProductCreateViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<h1 class="text-center">Додати новий продукт</h1>

<div class="container">
    <div class="row">
        <form asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input type="text" class="form-control" asp-for="Name">
            </div>
            <div class="mb-3">
                <label asp-for="Photos" class="form-label"></label>
                <input class="form-control" type="file" asp-for="Photos" multiple>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input type="number" class="form-control" asp-for="Price" step="0.01" min="0">
            </div>
            <button type="submit" class="btn btn-primary">Додати</button>
        </form>
    </div>
</div>